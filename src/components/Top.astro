---
const { PrimaryColor, text, NavTextColor } = Astro.props;
import "../styles/basic.css";
---

<div class="top">
    <h1 class="sans">{text}</h1>
</div>

<style define:vars={{ PrimaryColor, NavTextColor }}>
    .top {
        position: static;
        margin: 0;
        padding: 0;
        padding-top: 1rem;
        background-color: var(--PrimaryColor);
        width: 100%;
        overflow: hidden;
        border-radius: 0;
    }
    .top h1 {
        color: var(--NavTextColor);
        margin-top: 10%;
        margin-bottom: 10%;
        font-style: italic;
        text-decoration: solid;
    }
    @media screen and (max-width: 1000px) {
        .top {
            padding-top: 2rem;
        }
    }
    @media screen and (max-width: 500px) {
        .top {
            padding-top: 9rem;
        }
    }
</style>
