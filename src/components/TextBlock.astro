---
const { textColour, backColour } = Astro.props;
---

<style define:vars={{ backColour, textColour }}>
    div {
        width: 100%;
        height: fit-content;
        background-color: var(--backColour);
        color: var(--textColour);
        display: block;
        margin: 0;
        padding: 0;
        border-radius: 0;
    }
    .anim {
        color: black;
        opacity: 1;
    }
</style>

<div>
    <h1 class="anim">This is a text</h1>
    <p class="anim">These are test words</p>
</div>
<script src="../../node_modules/scrollreveal/dist/scrollreveal.min.js"></script>
<script>
    import ScrollReveal from 'scrollreveal';
  export function handleLoad() {
    const sr = ScrollReveal();
    sr.reveal('.anim', {
      duration: 10000,
      distance: '20px',
      origin: 'bottom',
      opacity: 0,
      interval: 200
    });
  }

</script>