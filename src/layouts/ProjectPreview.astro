---
const { frontmatter } = Astro.props;
import BasicLayout from "../layouts/BasicLayout.astro";
import Top from "../components/Top.astro";
---

<BasicLayout frontmatter={frontmatter}>
    <Top text={frontmatter.subtitle} color={frontmatter.PrimaryColor} />
    <div class="MainBody smallGapFlex">
        <div class="text">
            <div class="sixteenNine">
                <iframe
                    src={frontmatter.link}
                    title="YouTube video player"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                ></iframe>
            </div>
            <div class="smallGapFlex">
                <slot />
            </div>
        </div>
    </div>
</BasicLayout>

<style>
    iframe {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        height: 60%;
        width: 100%;
    }
    .sixteenNine {
        width: 60%;
        overflow: hidden;
        position: relative;
        padding-top: 56.25%;
        margin-bottom: -20%;
    }
</style>
