---
const { title, subtitle, PrimaryColor, NavTextColor } = Astro.props;
import Nav from "../components/NavBarKids.astro";
export const prerender = true;
import Top from "../components/Top.astro";
import "../styles/basic.css"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link
			rel="icon"
			type="image/svg+xml"
			href="https://media.discordapp.net/attachments/903265431396179978/977713498090008606/MaebeeTV-logos.jpeg?width=810&height=810"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - MaebeeTV</title>
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3417864629803378"
			crossorigin="anonymous"
		></script>
	</head>
	<body>
		<Nav PrimaryColor={PrimaryColor} NavTextColor={NavTextColor} />
		<Top text={subtitle} PrimaryColor={PrimaryColor} NavTextColor={NavTextColor} />
		<slot />
	</body>
</html>