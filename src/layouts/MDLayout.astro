---
const { frontmatter } = Astro.props;
const PrimaryColor = Astro.props.PrimaryColor;
import BasicLayout from "../layouts/BasicLayout.astro";
---
<style define:vars={{ PrimaryColor }}>
	.top {
		font: sans-serif italic;
		background-color: rgb(255 157 208);
		width: 100%;
	}
	.subtitle {
		width: 100%;
		color: black;
		padding: 20%;
	}
</style>

<BasicLayout>
	<div class="top">
		<h1 class="subtitle">{frontmatter.subtitle}</h1>
	</div>
</BasicLayout>


